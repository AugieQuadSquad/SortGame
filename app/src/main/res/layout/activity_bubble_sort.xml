<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="csc420.augustana.com.quadsquadgame.BubbleSort"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="8">


        <TextView
            android:id="@+id/item1"
            android:layout_width="10dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/box_one"
            android:gravity="center"
            android:text="hello"
            android:textSize="30dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/item2"
            android:layout_width="10dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/box_two"
            android:gravity="center"
            android:text="hello"
            android:textSize="30dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/item3"
            android:layout_width="10dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/box_three"
            android:gravity="center"
            android:text="hello"
            android:textSize="30dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/item4"
            android:layout_width="10dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/box_four"
            android:gravity="center"
            android:text="hello"
            android:textSize="30dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/item5"
            android:layout_width="10dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/box_five"
            android:gravity="center"
            android:text="hello"
            android:textSize="30dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/item6"
            android:layout_width="10dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/box_six"
            android:gravity="center"
            android:text="hello"
            android:textSize="30dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/item7"
            android:layout_width="10dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/box_seven"
            android:gravity="center"
            android:text="hello"
            android:textSize="30dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/item8"
            android:layout_width="10dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/box_eight"
            android:gravity="center"
            android:text="hello"
            android:textSize="30dp"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:weightSum="5"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hint"
            android:layout_weight="1"
            android:gravity="center"
            android:text="hint"
            android:onClick="hint"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/test"
            android:gravity="center"
            android:onClick="testSwap"
            android:layout_weight="1"
            android:text="Test"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tutorial"
            android:gravity="center"
            android:onClick="Tutorial"
            android:layout_weight="1"
            android:text="Tutorial"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resetButton"
            android:gravity="center"
            android:onClick="reset"
            android:layout_weight="1"
            android:text="Reset"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="timer"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:layout_weight="1"
            android:id="@+id/timer"/>

    </LinearLayout>

</LinearLayout>
